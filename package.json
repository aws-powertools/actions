{
  "workspaces": [
    "packages/github",
    "packages/reporting",
    "packages/testing"
  ],
  "license": "MIT-0",
  "devDependencies": {
    "@biomejs/biome": "1.7.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "msw": "^2.2.13",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "scripts": {
    "dev": "npm ci",
    "test": "vitest",
    "lint": "npm run format && biome lint packages --apply",
    "format": "biome check packages --apply",
    "ci": "biome check packages",
    "setup-local": "husky"
  },
  "lint-staged": {
    "packages/**/*.{mjs}": [
      "biome check --apply"
    ]
  },
  "type": "module",
  "private": "true"
}
